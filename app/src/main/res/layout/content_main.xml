<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:text="Первая неделя"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:id="@+id/button" android:layout_marginEnd="206dp" android:layout_marginRight="206dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="151dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="41dp" android:layout_marginStart="41dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="312dp"
            android:onClick="onButtonClickFirst"/>
    <Button
            android:text="Вторая неделя"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:id="@+id/button2" android:layout_marginLeft="54dp" android:layout_marginStart="54dp"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="151dp" android:layout_marginEnd="15dp" android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="312dp" android:onClick="onButtonClickSecond"/>
</android.support.constraint.ConstraintLayout>